<% if flash[:destroy] %>
	<div class="flash">
		<%= flash[:destroy] %>
	</div>
<% end %>

<h1>Books</h1>

<table>
	<thead>
		<tr>
			<th><b>Title</b></th>
			<th><b>Body</b></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
			<tr>
				<td><%= book.title %></td>
				<td><%= book.body %></td>
				<td><%= link_to 'Show', book_path(book.id) %>
				</td>
				<td>
					<%= link_to 'Edit', edit_book_path(book.id) %>
				</td>
				<td>
					<%= link_to "destroy", book_path(book), method: :delete, data: {confirm: 'Are You Sure?'} %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

<h2>New book</h2>

<%= form_for(@book) do |f| %>
	<%= render 'layouts/error_messages', model: f.object %>

	<div class="field">
		<label>Title</label>
		<%= f.text_field :title %>
	</div>
	
	<div class="field">
		<label>Body</label>
		<%= f.text_area :body %>
	</div>
	
	<div class="actions">
		<%= f.submit 'Create Book' %>
	</div>
<% end %>