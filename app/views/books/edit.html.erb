<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>
	<%= render 'layouts/error_messages', model: f.object %>

	<div class="field">
		<label>Title</label>
		<%= f.text_field :title %>
	</div>
	
	<div class="field">
		<label>Body</label>
		<%= f.text_area :body %>
	</div>
	
	<div class="actions">
		<%= f.submit 'Update Book' %>
	</div>

	<%= link_to 'Show', book_path(@book) %>
	|
	<%= link_to 'Back', books_path %>

<% end %>
